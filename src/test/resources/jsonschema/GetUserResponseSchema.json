{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "type": "object",
  "required": ["data", "support", "_meta"],
  "additionalProperties": false,

  "properties": {
    "data": {
      "type": "object",
      "required": ["id", "email", "first_name", "last_name", "avatar"],
      "additionalProperties": false,
      "properties": {
        "id": {
          "type": "integer",
          "minimum": 1
        },
        "email": {
          "type": "string",
          "format": "email"
        },
        "first_name": {
          "type": "string",
          "minLength": 1
        },
        "last_name": {
          "type": "string",
          "minLength": 1
        },
        "avatar": {
          "type": "string",
          "format": "uri"
        }
      }
    },

    "support": {
      "type": "object",
      "required": ["url", "text"],
      "additionalProperties": false,
      "properties": {
        "url": {
          "type": "string",
          "format": "uri"
        },
        "text": {
          "type": "string",
          "minLength": 1
        }
      }
    },

    "_meta": {
      "type": "object",
      "required": ["powered_by", "docs_url"],
      "additionalProperties": true,
      "properties": {
        "powered_by": { "type": "string" },
        "docs_url": { "type": "string", "format": "uri" },
        "upgrade_url": { "type": "string" },
        "example_url": { "type": "string" },
        "variant": { "type": "string" },
        "message": { "type": "string" },
        "context": { "type": "string" },
        "cta": {
          "type": "object",
          "required": ["label", "url"],
          "additionalProperties": false,
          "properties": {
            "label": { "type": "string" },
            "url": { "type": "string", "format": "uri" }
          }
        }
      }
    }
  }
}
