{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "type": "object",
  "required": ["name", "job", "id", "createdAt", "_meta"],
  "properties": {
    "name": {
      "type": "string",
      "minLength": 1
    },
    "job": {
      "type": "string",
      "minLength": 1
    },
    "id": {
      "type": "string"
    },
    "createdAt": {
      "type": "string",
      "format": "date-time"
    },
    "_meta": {
      "type": "object",
      "required": ["powered_by", "docs_url"],
      "properties": {
        "powered_by": { "type": "string" },
        "docs_url": { "type": "string", "format": "uri" },
        "upgrade_url": { "type": "string" },
        "example_url": { "type": "string" },
        "variant": { "type": "string" },
        "message": { "type": "string" },
        "context": { "type": "string" },
        "cta": {
          "type": "object",
          "required": ["label", "url"],
          "properties": {
            "label": { "type": "string" },
            "url": { "type": "string", "format": "uri" }
          }
        }
      }
    }
  },
  "additionalProperties": false
}
